{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ATTRIBUTION_HEADER": "0"
  },
  "permissions": {
    "allow": [
      "Bash(ansible-inventory)",
      "Bash(ansible-playbook --check)",
      "Bash(cargo build)",
      "Bash(cargo test)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(diff:*)",
      "Bash(docker build:*)",
      "Bash(docker inspect:*)",
      "Bash(docker logs:*)",
      "Bash(docker network inspect:*)",
      "Bash(docker network ls)",
      "Bash(docker ps:*)",
      "Bash(du:*)",
      "Bash(echo:*)",
      "Bash(env)",
      "Bash(find:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git status)",
      "Bash(gog:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(less:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(npm list:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(ps:*)",
      "Bash(pwd)",
      "Bash(systemctl status:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Glob",
      "Grep",
      "Read",
      "Task",
      "WebFetch",
      "WebSearch"
    ]
  },
  "skipDangerousModePermissionPrompt": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754855848942
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat AGENTS.md || true"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[01;32m%s@%s\\033[00m:\\033[01;34m%s\\033[00m' \"$(whoami)\" \"$(hostname -s)\" \"$(pwd)\""
  }
}
