# https://git-scm.com/docs/git-config
[alias]
    br = branch
    cb = !git rev-parse --abbrev-ref HEAD
    ci = commit
    co = checkout
    df = diff
    g = grep -I
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    lg = log -p
    pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
    pullf = !sh -c 'git fetch origin && git reset origin/$(git branch --show-current) --hard'
    pushf = push --force-with-lease
    rb = rbranch
    rv = review
    st = status
    start = !git checkout master && git pull && git clean -d --force
    sync = !git checkout --detach --quiet HEAD && git fetch origin master:master && git checkout --quiet -
[apply]
    whitespace = fix
[branch]
    sort = -committerdate
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    autocrlf = input
    editor = vim
    whitespace = fix,space-before-tab,tab-in-indent,trailing-space
    excludesfile = ~/.config/git/gitignore
    # https://stackoverflow.com/a/49862151
    pager = less -FR
[merge]
    log = true
[pull]
    ff = only
    #rebase = interactive
[push]
    default = simple
[rerere]
    enabled = 1
[user]
    name = andornaut
    email = andornaut@users.noreply.github.com
[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
    insteadOf = "github:"
[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
    insteadOf = "gist:"
[url "git@heroku.com:"]
    insteadOf = "heroku:"
[web]
    browser = google-chrome
[includeIf "gitdir/i:biniambekele/"]
    path = config.biniambekele
[includeIf "gitdir/i:Shopify*/"]
    path = config.shopify
