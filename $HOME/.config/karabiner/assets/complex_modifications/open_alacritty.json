{
    "title": "Open Alacritty with CMD+Enter",
    "rules": [
        {
            "description": "CMD+Enter opens Alacritty (in new window)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "return_or_enter",
                        "modifiers": {
                            "mandatory": ["command"]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "open -n -a 'Alacritty.app'"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
